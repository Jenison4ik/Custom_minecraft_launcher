{
  "name": "jenison-launcher",
  "version": "1.6.1",
  "description": "Jenison Launcher",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:main\" \"npm:dev:preload\" \"npm:dev:renderer\"",
    "dev:main": "tsc -p packages/main -w",
    "dev:preload": "tsc -p packages/preload -w",
    "dev:renderer": "vite -c packages/renderer/vite.config.ts",
    "start": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p packages/main && cpx config.json dist/main/",
    "build:preload": "tsc -p packages/preload",
    "build:renderer": "vite build -c packages/renderer/vite.config.ts",
    "pack": "npm run build && electron-builder "
  },
  "keywords": [],
  "author": "Evgeniy Solovev",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^4.0.0",
    "prettier": "^3.6.2",
    "sass": "^1.90.0",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@xmcl/core": "^2.15.1",
    "@xmcl/installer": "^6.1.2",
    "axios": "^1.10.0",
    "electron-updater": "^6.6.2",
    "extract-zip": "^2.0.1",
    "prismarine-nbt": "^2.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.1",
    "undici": "^4.16.0"
  },
  "build": {
    "appId": "ru.jenison",
    "productName": "Jenison Launcher",
    "directories": {
      "output": "out"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://jenison.ru/"
      }
    ],
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "packages/renderer/static/**/*"
    ],
    "icon": "packages/renderer/static/icon.png"
  }
}
