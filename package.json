{
  "name": "mc-launcher",
  "version": "1.0.0",
  "description": "Minecraft Launcher",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:main\" \"npm:dev:preload\" \"npm:dev:renderer\"",
    "dev:main": "tsc -p packages/main -w",
    "dev:preload": "tsc -p packages/preload -w",
    "dev:renderer": "vite -c packages/renderer/vite.config.ts",
    "start": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p packages/main && cp config.json dist/main/config.json",
    "build:preload": "tsc -p packages/preload",
    "build:renderer": "vite build -c packages/renderer/vite.config.ts",
    "pack": "npm run build && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
